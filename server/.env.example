# RClone File Upload Demo Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
SERVER_PORT=8080

# MinIO Configuration (for direct S3 API access)
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ACCESS_KEY=rclone
MINIO_SECRET_KEY=rclone123
MINIO_BUCKET=rclone
MINIO_USE_SSL=false
MINIO_CONSOLE_PORT=9001

# RClone Storage Configuration (for POSIX mount)
# Storage type: s3, google cloud storage, azureblob, etc.
STORAGE_TYPE=s3
# Provider: Minio, AWS, GCS, Wasabi, etc.
STORAGE_PROVIDER=Minio
# Endpoint (for S3-compatible storage like MinIO)
# For Docker Compose: minio:9000
# For Kubernetes: minio.default.svc.cluster.local:9000
STORAGE_ENDPOINT=minio:9000
# Bucket name to mount
STORAGE_BUCKET=rclone
# Access credentials (must match MINIO_ACCESS_KEY and MINIO_SECRET_KEY)
STORAGE_ACCESS_KEY=rclone
STORAGE_SECRET_KEY=rclone123
# SSL/TLS
STORAGE_USE_SSL=false
# Region (for AWS S3, leave empty for MinIO)
STORAGE_REGION=

# Application Settings
MAX_UPLOAD_SIZE=104857600
ALLOWED_FILE_TYPES=*
UPLOAD_PATH=uploads
LOG_LEVEL=info
